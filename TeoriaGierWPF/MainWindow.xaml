            <RowDefinition Height="1*"/>

        </Grid.RowDefinitions>


        <StackPanel x:Name="stackPanel" Background="LightGreen" 
                    Margin="10,10,10,10">
            <TextBox x:Name="nVal" Margin="10,00,10,10">

            </TextBox>

            <TextBox x:Name="kVal" Margin="10,0,10,10">

            </TextBox>

            <Button x:Name="startB" Height="20" Width="40" Margin="10,0,10,10"
                    Click="Button_Click"> Ok.
                
            </Button>

            <Button x:Name="clearB" Height="20" Width="40" Margin="10,0,10,10" 
                    Click="Button_Click">
